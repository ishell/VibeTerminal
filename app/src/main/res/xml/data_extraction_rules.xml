<?xml version="1.0" encoding="utf-8"?>
<!--
    Data extraction rules for Android 12+ (API 31+)
    Security: Exclude all sensitive data from cloud backup and device transfer
    This app stores SSH credentials which must never be backed up
-->
<data-extraction-rules>
    <cloud-backup>
        <!-- Exclude everything - SSH credentials are stored in database and could leak -->
        <exclude domain="database" path="." />
        <exclude domain="sharedpref" path="." />
        <exclude domain="file" path="." />
        <exclude domain="external" path="." />
    </cloud-backup>
    <device-transfer>
        <!-- Also exclude from device-to-device transfer -->
        <exclude domain="database" path="." />
        <exclude domain="sharedpref" path="." />
        <exclude domain="file" path="." />
        <exclude domain="external" path="." />
    </device-transfer>
</data-extraction-rules>
